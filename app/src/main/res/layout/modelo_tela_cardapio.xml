<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_margin="12dp"
            android:id="@+id/ivItemCardapio"
            android:layout_width="123dp"
            android:layout_height="80dp"
          app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView
            android:id="@+id/tvDescricaoCardapio"
            android:layout_width="99dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="salada com mai colombiana"
            app:layout_constraintEnd_toEndOf="@id/ivItemCardapio"
            app:layout_constraintStart_toStartOf="@id/ivItemCardapio"
            app:layout_constraintTop_toBottomOf="@id/ivItemCardapio"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>